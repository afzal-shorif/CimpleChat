@model TPChat.Models.ChatInfo
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="modal fade" id="registrationModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="registrationModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="registrationModalLabel">Modal title</h5>

                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>

            </div>
            <div class="modal-body">
                <form id="userRegistrationForm">
                    <input type="text" name="userName" id="userName" value="" class="form-control" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" id="registerUserButton" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col theme-content-background py-3">
        <div class="list-group">
            @foreach (var channel in ViewBag.Channels)
            {
                <a href="#" class="list-group-item list-group-item-action chat-channel" data-channel="@(channel.Key)">@(channel.Value)</a>
            }
        </div>
    </div>
</div>
@section Scripts{
<script>
    let Urls = {
        registration: '@Url.Action("Index", "Registration")',
        channel: '@Url.Action("Index", "Channel")',
    }
    
    const registrationModal = new bootstrap.Modal('#registrationModal');

    $(document).ready(function () {

        
        $(document).on('click', '.chat-channel', function () {
            let channelId = $(this).attr('data-channel');

            sessionStorage.clear();
            sessionStorage.setItem("channelId", channelId);
            
            redirectToChannel();
        })

        $("#registerUserButton").on('click', function () {
            registerUser($("#userName").val());
        });
    });
</script>
}
        